<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:layout_above="@+id/ll_bottom">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/app_rl_tab_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_iv_tab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_menu_message" />

            <TextView
                android:id="@+id/app_tv_tab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv_tab_main"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="首页"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_rl_tab_beauty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_iv_tab_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_menu_channel" />

            <TextView
                android:id="@+id/app_tv_tab_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv_tab_beauty"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="美女"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_rl_tab_function"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_iv_tab_function"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_better_pressed" />

            <TextView
                android:id="@+id/app_tv_tab_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv_tab_function"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="功能"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_rl_tab_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_iv_tab_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_menu_setting" />

            <TextView
                android:id="@+id/app_tv_tab_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv_tab_video"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="消息"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_rl_tab_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_iv_tab_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_menu_message" />

            <TextView
                android:id="@+id/app_tv_tab_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv_tab_setting"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="我的"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>